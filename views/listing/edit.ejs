<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
    <h3>Edit Listing</h3>
    <form method="POST" action="/listing/<%=listings._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%=listings.title%>" type="text" class="form-control" required/>
            <div class="invalid-feedback">Please enter Title</div>
        </div> 
        <br><br>
        <div>
            <label for="desc" class="form-label">Description</label>
            <textarea name="listing[desc]" type="text" class="form-control" required><%=listings.desc%></textarea>
            <div class="invalid-feedback">Please enter Description</div>
        </div>
        <br><br>
        <div class="mb-3">
            Original Image <br>
            <img src="<%=originalImageUrl%>"/>
        </div>
        <div class="mb-3">
            <label for="img" class="form-label">Upload New Listing Image</label>
            <input name="listing[img]" type="file" class="form-control"/>
        </div>
        <br><br>
        <div class="row">
            <div class="col-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" value="<%=listings.price%>" type="number" class="form-control" required/>
                <div class="invalid-feedback">Please enter Price</div>
            </div>
            <br><br>
            <div class="col-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" value="<%=listings.country%>" type="text" class="form-control" required/>
                <div class="invalid-feedback">Please enter Country</div>
            </div>
           
        </div>
         <br><br>
        <div>
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" value="<%=listings.location%>" type="text" class="form-control" required/>
            <div class="invalid-feedback">Please enter Location</div>
        </div>
        <br><br>
        <div>
    <label for="category" class="form-label">Category</label>
    <select name="listing[category]" class="form-select" required>
        <option value="trending" <%= listings.category === 'trending' ? 'selected' : '' %>>Trending</option>
        <option value="rooms" <%= listings.category === 'rooms' ? 'selected' : '' %>>Rooms</option>
        <option value="iconic-cities" <%= listings.category === 'iconic-cities' ? 'selected' : '' %>>Iconic Cities</option>
        <option value="mountains" <%= listings.category === 'mountains' ? 'selected' : '' %>>Mountains</option>
        <option value="castles" <%= listings.category === 'castles' ? 'selected' : '' %>>Castles</option>
        <option value="amazing-pools" <%= listings.category === 'amazing-pools' ? 'selected' : '' %>>Amazing Pools</option>
        <option value="camping" <%= listings.category === 'camping' ? 'selected' : '' %>>Camping</option>
        <option value="farms" <%= listings.category === 'farms' ? 'selected' : '' %>>Farms</option>
        <option value="arctic" <%= listings.category === 'arctic' ? 'selected' : '' %>>Arctic</option>
        <option value="domes" <%= listings.category === 'domes' ? 'selected' : '' %>>Domes</option>
        <option value="boats" <%= listings.category === 'boats' ? 'selected' : '' %>>Boats</option>
    </select>
    <div class="invalid-feedback">Please select a Category</div>
</div>
        <button class="btn btn-dark add-btn">Edit</button>
    </form>
    <br>
</div>
</div>
