<% layout("/layouts/boilerplate.ejs") %>
<body>
    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }
        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
            color: black;
            text-decoration: none;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        .filter p{
            font-size: 0.8rem;
        }
        .tax-info{
            display: none;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25 rem;
            padding: 1rem;
            margin-left: 2rem;
            display: flex;
            align-items: center;
        }
    </style>
    <div id="filters">
        <!-- added data categories -->
        <a class="filter" href="/listing/filter?category=trending">
        <div>
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        </a>
        <a class="filter" href="/listing/filter?category=rooms">
        <div>
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        </a>
        <a class="filter" href="/listing/filter?category=iconic-cities">
        <div>
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        </a>
        <a class="filter" href="/listing/filter?category=mountains">
        <div>
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        </a>
        <a class="filter" href="/listing/filter?category=castles">
        <div>
            <div><i class="fa-solid fa-chess-rook"></i></div>
            <p>Castles</p>
        </div>
        <a class="filter" href="/listing/filter?category=amazing-pools">
        <div>
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        </a>
        <a class="filter" href="/listing/filter?category=camping">
        <div>
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        </a>
        <a class="filter" href="/listing/filter?category=farms">
        <div>
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
        </div>
        </a>
        <a class="filter" href="/listing/filter?category=arctic">
        <div>
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        </a>
        <a class="filter" href="/listing/filter?category=domes">
        <div>
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        </a>
        <a class="filter" href="/listing/filter?category=boats">
        <div>
            <div><i class="fa-solid fa-sailboat"></i></i></div>
            <p>Boats</p>
        </div>
        </a>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
        <a href="/listing/<%=listing._id%>" class="listing-link">
        <div class="card col listing-card">
            <img src="<%=listing.img.url%>"
                class="card-img-top" 
                alt="listing_img" 
                style="height: 20rem">
            <div class="card-img-overlay">
                <h5 class="card-title"></h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b><br>
                    &#8377; <%=listing.price.toLocaleString("en-IN") %> / night
                    <i class="tax-info"> + 18% GST</i>
                </p>
            </div>
        </div>
        </a>
    <% } %>
    </div>
    

   <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            info.style.display = info.style.display !== "inline" ? "inline" : "none";
        }
    });
    </script>

</body>

